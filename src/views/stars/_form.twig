<form
  method="POST"
  enctype="multipart/form-data"
  action="/stars{% if star.id %}/{{ star.id }}{% endif %}">

  {% if star.id %}
    <input type="hidden" name="id" value="{{ star.id }}">
  {% endif %}

  <div>
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="{{ star.name | default('') }}" required>
  </div>

  <div>
    <label for="type">Type:</label>
    <input type="text" name="type" id="type" value="{{ star.type | default('') }}" required>
  </div>

  <div>
    <label for="galaxyId">Galaxy ID:</label>
    <input type="number" name="galaxyId" id="galaxyId" value="{{ star.galaxyId | default('') }}" required>
  </div>

  <div>
    <label for="image">Upload Image:</label>
    <input type="file" name="image" id="image">
  </div>

  {% if star.extension %}
    <div>
      <p>Current Image:</p>
      <img src="/images/{{ star.id }}{{ star.extension }}" alt="Star Image" width="200">
    </div>
  {% endif %}

  <div>
    <button type="submit">Save</button>
  </div>
</form>
